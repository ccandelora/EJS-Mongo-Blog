<%- include("partials/header") -%>
<h1>Home</h1>
<p><%= homeStartingContent %></p>
<% postItems.forEach(function(p, id) { %>
  <h2><%= p.title %></h2>
  <% if (p.body.length > 100) { %>
    <p><%= p.body.substring(0, 100) + "..." %><a href="/posts/<%= p.title %>"> Read More</a></p>
  <% } else { %>
    <p><%= p.body %><a href="/posts/<%= p.title %>"> Read More</a></p>
  <% }; %>
  
 <% }); %> 
<%- include("partials/footer") -%>
